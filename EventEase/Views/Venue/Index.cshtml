@model IEnumerable<EventEase.Models.Venue>

@{
    ViewData["Title"] = "Venues";
}

<h1>Venues</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<!-- Update the search form -->
<form asp-action="Index" method="get">
    <div class="input-group mb-3">
        <input type="text" name="search" class="form-control" placeholder="Search venues..." value="@ViewData["CurrentFilter"]" />
        <div class="input-group-append">
            <button type="submit" class="btn btn-outline-secondary">Search</button>
            <a asp-action="Index" class="btn btn-outline-secondary">Clear</a>
        </div>
    </div>
</form>

<div class="row">
    @foreach (var venue in Model)
    {
        <div class="col-md-4 mb-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@venue.VenueName</h5>
                    <p class="card-text">@venue.Location</p>
                    <p class="card-text"><strong>Capacity:</strong> @venue.Capacity</p>
                    <div class="btn-group">
                        <a asp-action="Details" asp-route-id="@venue.VenueId" class="btn btn-sm btn-primary">Details</a>
                        <a asp-action="Edit" asp-route-id="@venue.VenueId" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@venue.VenueId" class="btn btn-sm btn-danger">Delete</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>